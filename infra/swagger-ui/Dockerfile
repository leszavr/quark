FROM swaggerapi/swagger-ui:latest

# Настройки Swagger UI
ENV SWAGGER_JSON=/usr/share/nginx/html/swagger.yaml
ENV DEEP_LINKING=true
ENV DISPLAY_OPERATION_ID=true
ENV DEFAULT_MODELS_EXPAND_DEPTH=1
ENV DEFAULT_MODEL_EXPAND_DEPTH=1
ENV DEFAULT_MODEL_RENDERING=example
ENV DISPLAY_REQUEST_DURATION=true
ENV DOC_EXPANSION=list
ENV FILTER=true
ENV MAX_DISPLAYED_TAGS=5
ENV SHOW_EXTENSIONS=true
ENV SHOW_COMMON_EXTENSIONS=true
ENV TRY_IT_OUT_ENABLED=true

# Кастомные настройки для Quark Platform
ENV API_URL=/swagger.yaml

EXPOSE 8080