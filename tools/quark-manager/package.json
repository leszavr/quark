{
  "name": "@quark/manager",
  "version": "3.0.0",
  "description": "High-performance async package manager for Quark MKS",
  "type": "module",
  "bin": {
    "quark-check-packages": "./dist/check-packages.js",
    "quark-health": "./dist/health-check.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "check-packages": "node --loader ts-node/esm src/check-packages.ts",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.1",
    "cli-progress": "^3.12.0",
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/cli-progress": "^3.11.6",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "eslint": "^9.15.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
