# Простой Dockerfile для тестирования Blog Service
FROM node:20-alpine

WORKDIR /app

# Создаем package.json и устанавливаем зависимости
RUN npm init -y && \
    npm install express cors helmet compression

# Копируем готовый сервер
COPY server-simple.js server.js

EXPOSE 3004

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3004/api/health || exit 1

CMD ["node", "server.js"]